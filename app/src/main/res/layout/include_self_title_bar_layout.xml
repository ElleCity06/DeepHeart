<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_title"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/bg_title">

        <FrameLayout
            android:id="@+id/navbar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:minWidth="40dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_navbar_left"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@null"
                android:clickable="true"
                android:drawableLeft="@drawable/back_img"
                android:gravity="center_vertical|center_horizontal"
                android:padding="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_navbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:maxWidth="280dp"
            android:text="首页"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"/>

        <FrameLayout
            android:id="@+id/navbar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:minWidth="40dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_navbar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@null"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"
                android:visibility="gone"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_navbar_middle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@id/navbar_right"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>